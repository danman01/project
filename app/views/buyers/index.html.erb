<h1>Listing buyers</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Phone</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Location</th>
    <th>Lat</th>
    <th>Lng</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buyers.each do |buyer| %>
  <tr>
    <td><%= buyer.email %></td>
    <td><%= buyer.phone %></td>
    <td><%= buyer.first_name %></td>
    <td><%= buyer.last_name %></td>
    <td><%= buyer.location %></td>
    <td><%= buyer.lat %></td>
    <td><%= buyer.lng %></td>
    <td><%= buyer.notes %></td>
    <td><%= link_to 'Show', buyer %></td>
    <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
    <td><%= link_to 'Destroy', buyer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

