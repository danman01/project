<%load_function "plebeosaur.map('buyer')"%>

<%= form_for(@buyer, :html=>{:id=>"form_contact"}) do |f| %>
  <% if @buyer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@buyer.errors.count, "error") %> prohibited this buyer from being saved:</h2>

      <ul>
      <% @buyer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
   	<%= f.label :location, "What's a nearby landmark?" %><span class="helper_text"><a data-placement="below" href="#" class="btn alert" rel="popover" data-content="IE the blue lot by the obnoxious Georgia Tech fans">?</a></span>
<br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
   	<%= f.label :lat, 'latitude' %>
	<span class="helper_text">
	<a data-placement="below" href="#" class="btn alert" rel="popover" data-content="we received this from your device and will use it to help sellers locate you.  You can update this at anytime if you change locals">?</a></span>
	<br />
    <%= f.text_field :lat %>
  </div>
  <div class="field">
    <%= f.label :lng, "longitutde" %><br />
    <%= f.text_field :lng %>
  </div>
  <div class="field">
    <%= f.label :notes, "any specific notes you want a seller to know?" %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit "Submit!", :id=>"btn_submit" %>
  </div>
<% end %>
