<%= form_for(@venue) do |f| %>
  <% if @venue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

      <ul>
      <% @venue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity %>
  </div>
<div class="field">
    <%= f.label :country %><br />
    <%= f.select :country_id, Country.all.collect { |l| [l.name, l.id]}, :prompt =>'Select a country'%>
  </div>
<div class="field">

    <%= f.label :region %><br />
    <%= f.select :region_id, Region.find(:all, :conditions=>["country_id=?", 482], :order=>"region_code").collect { |l| [l.name, l.id]}, :prompt =>'Select a Region'%>
  </div>
<div class="field">
    <%= f.label :city %><br />
    <%= f.select :city_id, City.find(:all, :conditions=>["country_id=?", 482], :order=>"name").collect { |l| [l.name, l.id]}, :prompt =>'Select a city (currently just US)'%>
  </div>
<div class="field">
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude%>
  </div>
<div class="field">
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude%>
  </div>
<div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address%>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
